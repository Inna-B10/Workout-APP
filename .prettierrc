{
	"trailingComma": "none",
	"tabWidth": 2,
	"useTabs": true,
	"semi": false,
	"singleQuote": true,
	"jsxSingleQuote": true,
	"arrowParens": "avoid",
		"importOrder": [
		"^(react/(.*)$)|^(react$)",
    "^(next/(.*)$)|^(next$)",
		"<THIRD_PARTY_MODULES>",
		"/lib/",
		"/hooks/",
		"/screens/",
		"/components/",
    "^[./](?!.*\\.(scss|css|sass)$)",
		"\\.(scss|css|sass)$"
	],
	"importOrderSortSpecifiers": true,
	"plugins": ["@trivago/prettier-plugin-sort-imports"]
}
